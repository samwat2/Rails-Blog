
<h1 class="text-center">Edit</h1>
<%= form_with model: @user, local: true do |f| %>
	<div class="form-group">
		<%= f.text_field :first_name, placeholder: 'First Name', class: 'form-control text-center' %>
	</div>
	<div class="form-group">
		<%= f.text_field :last_name, placeholder: 'Last Name', class: 'form-control text-center' %>
	</div>	
	<div class="form-group">
		<%= f.email_field :email, placeholder: 'Email', class: 'form-control text-center' %>
	</div>
	<%= f.submit class: 'btn btn-primary' %>
<% end %>	