<div class="container">
	<h1 class="text-center name">Welcome, <%= @user.first_name %></h1>
	<div class="row">
		<div class="col-6">
			<%= image_tag "profile_picture_two.jpg", class: "img-fluid rounded" %>
		</div>
		<div class="col-6">
			<div class="info">
				<p><%= @user.first_name %></p>
				<p><%= @user.last_name %></p>
				<p><%= @user.email %></p>
				<div class="button-group">
					<%= link_to "Edit Profile", edit_user_path(@user), class: 'btn btn-primary' %>
					<%= link_to "All Users", users_path, class: 'btn btn-primary' %>
					<%= link_to "Destroy User", @user, method: :delete, class: 'btn btn-primary'%>
					<%= link_to "New Post", new_post_path(@post), class: 'btn btn-primary' %>
				</div>
			</div>
		</div>
		<div class="col-12">
			<div class="postsOnProfile">
				<h3>Posts By <%= @user.first_name %></h3>
			</div>
		</div>
	</div>
</div>